{% extends 'front/container.html.twig' %}

{% block content %}
    <h1>Login</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {{ form(loginForm) }}

    <a href="{{ path('front_register') }}">No account? Sign up here!</a>
{% endblock content %}
