<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{{ page_title|default('eshop') }}{% endblock %}</title>
    </head>
    <body>
        <header>
            <ul>
                {% if app.getUser() %}
                    <li><a href="{{ logout_path() }}">Logout</a></li>
                {% endif %}
                <li><a href="{{ path('admin_blog_index') }}">Blog</a></li>
                <li><a href="{{ path('front_blog_index') }}">Front Blog</a></li>
                <li><a href="{{ path('admin_admins') }}">Admins</a></li>
                <li><a href="{{ path('homepage') }}">Homepage</a></li>
                <li>{{ test }}</li>
            </ul>
            {% for flash_message in app.session.flashBag.get('notice') %}
                <br />{{ flash_message }}
            {% endfor %}
        </header>
        <div>{% block content %}{% endblock %}</div>
        <footer>
            This is a footer
        </footer>
    </body>
</html>