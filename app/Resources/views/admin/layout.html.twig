<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{{ page_title|default('eshop') }}{% endblock %}</title>
        <script src="{{ asset('assets/js/jquery-3.1.1.min.js') }}"></script>
    </head>
    <body>
        <header>
            <ul>
                {% if app.getUser() %}
                    <li><a href="{{ logout_path() }}">Logout</a></li>
                {% endif %}
                <li><a href="{{ path('admin_blog_index') }}">Blog</a></li>
                <li><a href="{{ path('front_blog_index') }}">Front Blog</a></li>
                <li><a href="{{ path('admin_admins') }}">Admins</a></li>
                <li><a href="{{ path('front_homepage') }}">Homepage</a></li>
            </ul>

            <div id="js-flash-messages-wrapper">
                {% include('front/_includes/_flash_messages.html.twig') %}
            </div>

        </header>
        <div>{% block content %}{% endblock %}</div>
        <footer>
            This is a footer
        </footer>
    </body>
</html>